<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/benchmark_background"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/devInfo_button"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:text="DEVICE INFO"
        android:textColor="#99D0FB"
        app:backgroundTint="#010C4E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/scores_button"
        android:layout_width="145dp"
        android:layout_height="59dp"
        android:text="SCORES"
        android:textColor="#99D0FB"
        app:backgroundTint="#010C4E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="179dp"
        android:layout_height="79dp"
        android:layout_marginBottom="150dp"
        android:text="START TEST"
        android:textColor="#99D0FB"
        android:textColorHighlight="#FFFFFF"
        app:backgroundTint="#010C4E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/benchmark_title"
        android:layout_width="344dp"
        android:layout_height="82dp"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:text="BENCHMARK"
        android:textAlignment="center"
        android:textColor="#99D0FB"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>